<%- include('partials/header') %>

<main>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-background">
            <div class="particles"></div>
        </div>
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">
                    Creativity<br>
                    <span class="highlight">without limits</span>
                </h1>
                <p class="hero-subtitle">
                    Prints • Graphics • Flyers • Business Cards • 3D Printing • Laser Engraving • Stickers
                </p>
                <div class="hero-buttons">
                    <a href="#contact" class="btn btn-primary">Design with us</a>
                    <a href="/portfolio" class="btn btn-secondary">View our work</a>
                </div>
            </div>
        </div>
        <div class="scroll-indicator">
            <div class="scroll-icon"></div>
            <span>Scroll Down</span>
        </div>
    </section>

    <!-- About Section -->
    <section class="about-preview">
        <div class="container">
            <div class="about-content">
                <div class="about-text">
                    <h2>About Us</h2>
                    <p>Artistic Projects is a creative powerhouse dedicated to bringing your visual ideas to life. We combine artistic vision with technical expertise to deliver exceptional results across multiple mediums.</p>
                    <a href="/about" class="btn btn-outline">Learn More</a>
                </div>
                <div class="stats-grid">
                    <div class="stat-item">
                        <span class="stat-number">7+</span>
                        <span class="stat-label">Years Experience</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">500+</span>
                        <span class="stat-label">Projects Completed</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">50+</span>
                        <span class="stat-label">Regular Clients</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-number">6</span>
                        <span class="stat-label">Creative Services</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Projects Section -->
    <section class="projects-showcase">
        <div class="container">
            <h2>Nasze Projekty</h2>
            <p class="section-subtitle">Poznaj nasze najnowsze realizacje i zobacz, jak pomagamy klientom osiągnąć ich cele</p>
            <div class="projects-grid">
                <div class="project-card featured">
                    <div class="project-image">
                        <img src="/images/project-featured.jpg" alt="Projekt główny">
                        <div class="project-overlay">
                            <div class="project-info">
                                <h3>Kompleksowa identyfikacja wizualna</h3>
                                <p>Logo, wizytówki, ulotki i materiały promocyjne dla lokalnej firmy</p>
                                <div class="project-tags">
                                    <span class="tag">Graphic Design</span>
                                    <span class="tag">Branding</span>
                                    <span class="tag">Print</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="project-card">
                    <div class="project-image">
                        <img src="/images/project-1.jpg" alt="Projekt 1">
                        <div class="project-overlay">
                            <div class="project-info">
                                <h3>Koszulki z nadrukiem</h3>
                                <p>Unikalne wzory dla zespołu sportowego</p>
                                <div class="project-tags">
                                    <span class="tag">Clothing Prints</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="project-card">
                    <div class="project-image">
                        <img src="/images/project-2.jpg" alt="Projekt 2">
                        <div class="project-overlay">
                            <div class="project-info">
                                <h3>Grawerowanie laserowe</h3>
                                <p>Personalizowane gadżety firmowe</p>
                                <div class="project-tags">
                                    <span class="tag">Laser Engraving</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="project-card">
                    <div class="project-image">
                        <img src="/images/project-3.jpg" alt="Projekt 3">
                        <div class="project-overlay">
                            <div class="project-info">
                                <h3>Druk 3D</h3>
                                <p>Prototypy i modele architektoniczne</p>
                                <div class="project-tags">
                                    <span class="tag">3D Printing</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <a href="/portfolio" class="btn btn-primary">Zobacz wszystkie projekty</a>
            </div>
        </div>
    </section>

    <!-- Services Preview -->
    <section class="services-preview">
        <div class="container">
            <h2>Our Services</h2>
            <p class="section-subtitle">We offer a wide range of creative services to bring your ideas to life</p>
            <div class="services-grid">
                <div class="service-card">
                    <div class="service-icon">
                        <i class="icon-print"></i>
                    </div>
                    <h3>Clothing Prints</h3>
                    <p>Custom designs printed on t-shirts, hoodies, and other garments with high-quality materials and techniques.</p>
                </div>
                <div class="service-card">
                    <div class="service-icon">
                        <i class="icon-design"></i>
                    </div>
                    <h3>Graphic Design</h3>
                    <p>Professional design services for logos, branding materials, illustrations, and digital graphics.</p>
                </div>
                <div class="service-card">
                    <div class="service-icon">
                        <i class="icon-flyer"></i>
                    </div>
                    <h3>Flyers & Business Cards</h3>
                    <p>Eye-catching print materials that make a lasting impression for your business or event.</p>
                </div>
            </div>
            <div class="text-center">
                <a href="/services" class="btn btn-primary">View All Services</a>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>