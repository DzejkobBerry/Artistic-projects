<%- include('partials/header') %>

<main>
    <section class="page-hero">
        <div class="container">
            <h1>Nasze Portfolio</h1>
            <p>Poznaj nasze najnowsze projekty i prace kreatywne</p>
        </div>
    </section>

    <section class="portfolio-filters">
        <div class="container">
            <div class="filter-buttons">
                <button class="filter-btn active" data-filter="all">Wszystkie Projekty</button>
                <button class="filter-btn" data-filter="prints">Druk na Odzieży</button>
                <button class="filter-btn" data-filter="graphics">Projektowanie Graficzne</button>
                <button class="filter-btn" data-filter="print-materials">Materiały Drukowane</button>
                <button class="filter-btn" data-filter="3d">Druk 3D</button>
                <button class="filter-btn" data-filter="laser">Grawerowanie Laserowe</button>
            </div>
        </div>
    </section>

    <section class="portfolio-grid">
        <div class="container">
            <div class="portfolio-items">
                <div class="portfolio-item" data-category="prints">
                    <div class="portfolio-image">
                        <img src="/images/portfolio/tshirt-1.jpg" alt="Niestandardowy projekt koszulki">
                        <div class="portfolio-overlay">
                            <h3>Niestandardowy projekt koszulki</h3>
                            <p>Druk na Odzieży</p>
                        </div>
                    </div>
                </div>
                
                <div class="portfolio-item" data-category="graphics">
                    <div class="portfolio-image">
                        <img src="/images/portfolio/logo-1.jpg" alt="Projekt logo marki">
                        <div class="portfolio-overlay">
                            <h3>Projekt logo marki</h3>
                            <p>Projektowanie Graficzne</p>
                        </div>
                    </div>
                </div>
                
                <div class="portfolio-item" data-category="print-materials">
                    <div class="portfolio-image">
                        <img src="/images/portfolio/flyer-1.jpg" alt="Ulotka eventowa">
                        <div class="portfolio-overlay">
                            <h3>Ulotka eventowa</h3>
                            <p>Materiały Drukowane</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>